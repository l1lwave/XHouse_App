<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/powderBlue"
    tools:context=".User.MyReals_Activity"
    android:id="@+id/activity_my_reals">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/myreals_client_materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/cadetBlue"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="96dp"
        android:layout_height="61dp"
        app:layout_constraintEnd_toEndOf="@+id/myreals_client_materialToolbar"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="@+id/myreals_client_materialToolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/added_reals_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:scrollbars="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/myreals_client_materialToolbar" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>